<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/tag">
        <TextView
            android:id="@+id/layout_removable_product_tag__name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:layout_marginStart="@dimen/def_dimen"
            android:text="Кроссовки"
            android:textColor="#2E2D2C"
            android:textSize="16sp"
            android:textStyle="normal"
            />

        <ImageView
            android:id="@+id/layout_removable_product_tag__btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete_tag_image"
            android:padding="@dimen/def_dimen"
            />

</LinearLayout>