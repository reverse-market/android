<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_search__search_text_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/frg_filter__title_container"
    android:layout_marginStart="@dimen/def_dimen"
    android:layout_marginTop="@dimen/def_dimen"
    android:layout_marginEnd="@dimen/def_dimen"
    android:layout_marginBottom="@dimen/def_dimen"
    android:background="@drawable/search_background"
    android:tag="close"
    android:visibility="visible">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:elevation="40dp"
        android:padding="@dimen/def_dimen"
        android:src="@drawable/ic_search" />

    <EditText
        android:id="@+id/layout_search__toolbar_search__text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/search_background"
        android:hint="@string/searchHint"
        android:inputType="text"
        android:maxLines="1"
        android:padding="@dimen/def_dimen"
        android:paddingStart="@dimen/xxx_huge_dimen"
        android:paddingEnd="@dimen/xxx_huge_dimen"
        android:textColor="@color/colorTextGray"
        android:textCursorDrawable="@drawable/search_black_cursor"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/layout_search__toolbar_search_close_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:elevation="40dp"
        android:padding="@dimen/def_dimen"
        android:src="@drawable/ic_close_product"
        android:visibility="gone" />

</RelativeLayout>