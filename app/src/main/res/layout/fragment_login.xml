<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/login_background">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_login_logo"
        android:layout_marginTop="57dp"
        android:contentDescription="TODO" />
    <Button
        android:id="@+id/google_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/facebook_login_button"
        android:background="@drawable/rounded_google_login_button"
        android:drawableStart="@drawable/ic_google_icon"
        android:padding="15dp"
        android:text="@string/login_google"
        android:textColor="@color/colorBlack"
        android:textAllCaps="false"
        android:layout_marginBottom="10dp"
        />
    <Button
        android:elevation="100dp"
        android:id="@+id/facebook_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/rounded_facebook_login_button"
        android:drawableStart="@drawable/facebook_logo"
        android:padding="15dp"
        android:text="@string/login_facebook"
        android:textColor="@color/colorWhite"
        android:textAllCaps="false"
        android:layout_marginBottom="70dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>